<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/case_item_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#E1F5FE"
    app:cardCornerRadius="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/province_detail_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:text="Nama Provinsi"
            android:layout_marginEnd="16dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#000000"
            android:textSize="16sp"
            android:fontFamily="@font/airbnb_medium"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/province_detail_item_infected_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toStartOf="@id/province_detail_item_recovered_layout"
            app:layout_constraintTop_toBottomOf="@id/province_detail_item_title"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/province_detail_item_infected_image"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_infected"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/province_detail_item_total_infected_count_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/airbnb_medium"
                android:text="0"
                android:textColor="#FFB74C"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@id/province_detail_item_infected_image"
                app:layout_constraintTop_toBottomOf="@id/province_detail_item_infected_image"
                app:layout_constraintEnd_toEndOf="@id/province_detail_item_infected_image" />

            <TextView
                android:id="@+id/province_detail_item_total_infected_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/airbnb_book"
                android:text="Positif"
                android:textColor="#FFB74C"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@id/province_detail_item_total_infected_count_number"
                app:layout_constraintStart_toStartOf="@id/province_detail_item_total_infected_count_number"
                app:layout_constraintTop_toBottomOf="@id/province_detail_item_total_infected_count_number"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/province_detail_item_recovered_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/province_detail_item_title"
            app:layout_constraintStart_toEndOf="@id/province_detail_item_infected_layout"
            app:layout_constraintEnd_toStartOf="@id/province_detail_item_death_layout">

            <ImageView
                android:id="@+id/province_detail_item_recovered_image"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_recovered"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/province_detail_item_total_recovered_count_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/airbnb_medium"
                android:text="0"
                android:textColor="#58D66B"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@id/province_detail_item_recovered_image"
                app:layout_constraintTop_toBottomOf="@id/province_detail_item_recovered_image"
                app:layout_constraintEnd_toEndOf="@id/province_detail_item_recovered_image" />

            <TextView
                android:id="@+id/province_detail_item_total_recovered_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/airbnb_book"
                android:text="Sembuh"
                android:textColor="#58D66B"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@id/province_detail_item_total_recovered_count_number"
                app:layout_constraintStart_toStartOf="@id/province_detail_item_total_recovered_count_number"
                app:layout_constraintTop_toBottomOf="@id/province_detail_item_total_recovered_count_number"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/province_detail_item_death_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@id/province_detail_item_recovered_layout"
            app:layout_constraintTop_toBottomOf="@id/province_detail_item_title"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/province_detail_item_death_image"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_death"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/province_detail_item_total_death_count_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/airbnb_medium"
                android:text="0"
                android:textColor="#FD305A"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@id/province_detail_item_death_image"
                app:layout_constraintTop_toBottomOf="@id/province_detail_item_death_image"
                app:layout_constraintEnd_toEndOf="@id/province_detail_item_death_image" />

            <TextView
                android:id="@+id/province_detail_item_total_death_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/airbnb_book"
                android:text="Meninggal"
                android:textColor="#FD305A"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@id/province_detail_item_total_death_count_number"
                app:layout_constraintStart_toStartOf="@id/province_detail_item_total_death_count_number"
                app:layout_constraintTop_toBottomOf="@id/province_detail_item_total_death_count_number" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>