<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/fragment_home_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/toolbarBackgroundColor"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="COVID-19 ID"
        app:titleTextColor="#FFFFFF">

    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_home_start_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_home_end_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/fragment_home_banner"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="W,1:2"
        app:riv_corner_radius="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_home_toolbar"
        app:layout_constraintStart_toStartOf="@id/fragment_home_start_guideline"
        app:layout_constraintEnd_toEndOf="@id/fragment_home_end_guideline"
        android:src="@drawable/img_banner_home"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/fragment_home_headline_case"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Kasus Virus"
        android:fontFamily="@font/airbnb_medium"
        android:textSize="18sp"
        android:textColor="#0D47A1"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_home_banner"
        app:layout_constraintStart_toStartOf="@id/fragment_home_start_guideline"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/fragment_home_global_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fragment_home_headline_case"
        app:layout_constraintStart_toStartOf="@id/fragment_home_start_guideline"
        app:layout_constraintEnd_toStartOf="@id/fragment_home_end_guideline"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/fragment_home_global_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:text="Global"
                android:textColor="#000000"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_medium"/>

            <TextView
                android:id="@+id/fragment_home_global_total_case_count_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginStart="16dp"
                android:text="12.345.678"
                android:textColor="#FFB74C"
                android:textSize="22sp"
                app:layout_constraintEnd_toStartOf="@id/fragment_home_global_total_death_count_number"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_home_global_text" />

            <TextView
                android:id="@+id/fragment_home_global_total_case_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kasus"
                android:fontFamily="@font/airbnb_medium"
                android:textColor="#FFB74C"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@id/fragment_home_global_total_case_count_number"
                app:layout_constraintStart_toStartOf="@id/fragment_home_global_total_case_count_number"
                app:layout_constraintTop_toBottomOf="@id/fragment_home_global_total_case_count_number" />

            <TextView
                android:id="@+id/fragment_home_global_total_death_count_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/airbnb_medium"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                android:text="10.731"
                android:textColor="#FD305A"
                android:textSize="22sp"
                app:layout_constraintEnd_toStartOf="@id/fragment_home_global_total_recovered_count_number"
                app:layout_constraintStart_toEndOf="@id/fragment_home_global_total_case_count_number"
                app:layout_constraintTop_toBottomOf="@+id/fragment_home_global_text" />

            <TextView
                android:id="@+id/fragment_home_global_total_death_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meninggal"
                android:fontFamily="@font/airbnb_medium"
                android:textColor="#FD305A"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@id/fragment_home_global_total_death_count_number"
                app:layout_constraintStart_toStartOf="@id/fragment_home_global_total_death_count_number"
                app:layout_constraintTop_toBottomOf="@id/fragment_home_global_total_death_count_number" />

            <TextView
                android:id="@+id/fragment_home_global_total_recovered_count_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/airbnb_medium"
                android:text="10.731"
                android:layout_marginTop="24dp"
                android:textColor="#58D66B"
                android:textSize="22sp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/fragment_home_global_total_death_count_number"
                app:layout_constraintTop_toBottomOf="@+id/fragment_home_global_text" />

            <TextView
                android:id="@+id/fragment_home_global_total_recovered_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sembuh"
                android:fontFamily="@font/airbnb_medium"
                android:textColor="#58D66B"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/fragment_home_global_total_recovered_count_number"
                app:layout_constraintEnd_toEndOf="@id/fragment_home_global_total_recovered_count_number"
                app:layout_constraintStart_toStartOf="@id/fragment_home_global_total_recovered_count_number" />

            <TextView
                android:id="@+id/fragment_home_global_last_update"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fragment_home_global_total_recovered_count_text"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:text="Update : 18/04/2020"
                android:textSize="12sp"
                android:fontFamily="@font/airbnb_book"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
